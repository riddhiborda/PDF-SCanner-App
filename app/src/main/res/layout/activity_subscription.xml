<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.SubscriptionActivity">

        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="end"
            android:layout_margin="@dimen/_7sdp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/ic_close"
            app:tint="#919195" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Premium Access"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_22sdp"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_185sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/sub_image" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_90sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/icn_right_arrow"
                                app:tint="#ffcc01" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_4sdp"
                                android:gravity="center_vertical"
                                android:text="Unlock JPG To Pdf"
                                android:textColor="@color/txt_blue_dark"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/icn_right_arrow"
                                app:tint="#ffcc01" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_4sdp"
                                android:gravity="center_vertical"
                                android:text="Export HD Resolution \nPDF Files"
                                android:textColor="@color/txt_blue_dark"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="Start 3 day free trial, then renew"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="normal" />


                <LinearLayout
                    android:id="@+id/btn_weekly"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_22sdp"
                    android:layout_marginRight="@dimen/_22sdp"
                    android:background="@drawable/premium_btn"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_price_1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:singleLine="true"
                        android:textSize="@dimen/_14sdp"
                        android:text="₹ 449.00/Weekly "/>


                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_back"
                        app:tint="@color/white"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:rotation="180"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_monthly"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:background="@drawable/premium_btn"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_price_2"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/_18sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:singleLine="true"
                            android:textSize="@dimen/_14sdp"
                            android:text="₹ 889.00/Monthly "/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/_18sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:singleLine="true"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:textSize="@dimen/_9sdp"
                            android:text="3 days free trial"/>


                    </LinearLayout>



                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_back"
                        app:tint="@color/white"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:rotation="180"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_yearly"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_22sdp"
                    android:layout_marginRight="@dimen/_22sdp"
                    android:background="@drawable/premium_btn"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_price_3"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/_18sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:singleLine="true"
                            android:textSize="@dimen/_14sdp"
                            android:text="₹ 3,549.00/Yearly "/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/_18sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:singleLine="true"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:textSize="@dimen/_9sdp"
                            android:text="3 days free trial"/>


                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_back"
                        app:tint="@color/white"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:rotation="180"/>

                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:text="Restore"
                    android:textAllCaps="true"
                    android:visibility="gone"
                    android:textColor="#ff4151"
                    android:textSize="@dimen/_17sdp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hyphenationFrequency="full"
                        android:text="@string/purchase_instruct"
                        android:textColor="#5d5d5d" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</layout>