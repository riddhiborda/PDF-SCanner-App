<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CustomTextView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        CustomTextView:cardBackgroundColor="@color/white"
        CustomTextView:cardCornerRadius="@dimen/_10sdp"
        CustomTextView:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_later"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_alignParentRight="true"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/ic_close"
                app:tint="@color/gray_btn_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/_17sdp"
                android:paddingBottom="@dimen/_16sdp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:fontFamily="@font/sf_pro_semibold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Enjoying the app?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:fontFamily="@font/sf_pro_regular"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:singleLine="false"
                    android:text="@string/rate_text"
                    android:textColor="@color/gray_text_home"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible" />

                <!--    <TextView
                        android:layout_width="wrap_content"s
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="@string/rate_text"
                        android:textColor="@color/weekView_text"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />-->

                <com.pdfscanner.pdf.scanpdf.rating.RotationRatingBar
                    android:id="@+id/rotationratingbar_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    app:srb_starHeight="@dimen/_30sdp"
                    app:srb_starPadding="@dimen/_4sdp"
                    app:srb_starWidth="@dimen/_30sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/rate_btn"
                        android:fontFamily="@font/sf_pro_regular"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:padding="@dimen/_10sdp"
                        android:text="Rate Now"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>

